<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="32dp"
            android:id="@+id/txtName"
            android:textSize="14sp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:text="ACP|VODKA"
            android:gravity="center_vertical"
            android:textColor="@color/bg"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt750"
            android:textSize="12sp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="750 ML"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txt375"

            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:text="375 ML"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txt180"

            android:textSize="12sp"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="180 ML"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center_vertical|end"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"

        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:singleLine="true"
            android:inputType="number"
            android:text="t"
            android:background="@null"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:gravity="center"
            android:textStyle="bold"
            android:id="@+id/edt750"
            android:textSize="14sp"
            android:textColor="@color/black"/>

        <EditText
            android:singleLine="true"
            android:inputType="number"
            android:text="t"

            android:background="@null"
            android:textStyle="bold"
            android:layout_weight="1.5"
            android:layout_width="match_parent"
            android:id="@+id/edt375"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="@color/black"/>

        <EditText
            android:singleLine="true"
            android:inputType="number"
            android:text="t"

            android:background="@null"
            android:textStyle="bold"
            android:id="@+id/edt180"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

    </LinearLayout>

    <View
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recAnalyticsFooter"></android.support.v7.widget.RecyclerView>

</LinearLayout>