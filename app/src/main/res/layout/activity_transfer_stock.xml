<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    tools:context="com.oodi.jingoo.activity.TransferStockActivity">

    <include layout="@layout/coomon_header"
        android:id="@+id/i1"/>

    <LinearLayout
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/i1">

        <LinearLayout
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lnrFrom"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textAllCaps="true"
                    android:textSize="13sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/from"/>

                <TextView
                    android:id="@+id/txtFrom"
                    android:textSize="16sp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/line_color"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="@dimen/activity_horizontal_margin"
                    />

            </LinearLayout>

            <ImageView
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="@dimen/activity_horizontal_margin"
                android:src="@drawable/transfer"
                android:layout_width="40dp"
                android:layout_height="fill_parent" />

        </LinearLayout>

        <TextView
            android:layout_marginRight="40dp"
            android:textAllCaps="true"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/to"/>

        <TextView
            android:id="@+id/txtTo"
            android:layout_marginRight="40dp"
            android:textSize="16sp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <View
            android:layout_marginRight="40dp"

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            />

        <TextView
            android:textAllCaps="true"
            android:layout_marginRight="40dp"

            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/what"/>

        <TextView
            android:layout_marginRight="40dp"
            android:id="@+id/txtWhat"
            android:textSize="16sp"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"/>

        <View
            android:layout_marginRight="40dp"

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            />

        <TextView
            android:layout_marginRight="40dp"

            android:textAllCaps="true"
            android:textSize="13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/number_of_bottles"/>

        <EditText
            android:inputType="number"
            android:layout_marginRight="40dp"
            android:textSize="16sp"
            android:id="@+id/edtProduct"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textColor="@color/black"/>

        <View
            android:layout_marginRight="40dp"

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgWt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/transfer_wt"/>

    <Button
        android:visibility="invisible"
        android:id="@+id/btnTransfer"
        android:textColor="@color/white"
        android:text="@string/transfer"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:background="@color/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
